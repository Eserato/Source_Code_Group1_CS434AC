@{
    ViewData["Title"] = "Trang mua hàng";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f0f0f0;
    }
    
    .container {
        max-width: 600px;
        margin: 100px auto;
        background-color: white;
        padding: 40px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        text-align: center;
    }
    
    h1 {
        color: #333;
        margin-bottom: 20px;
        font-size: 24px;
    }
    
    .back-button {
        background-color: #2c3e50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
    }
    
    .back-button:hover {
        background-color: #1a252f;
    }
</style>

<div class="container">
    <h1>Trang mua hàng</h1>
    <p>Đây là trang mua hàng. Chức năng đang được phát triển.</p>
    <a href="@Url.Action("Index", "Book")" class="back-button">Quay lại</a>
</div>